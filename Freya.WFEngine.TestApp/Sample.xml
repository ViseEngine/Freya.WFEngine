<?xml version="1.0" encoding="utf-8" ?>
<Workflow>
  <States>
    <State name="Open">
      <Transition exitState="Closed" name="close" />
      <Transition exitState="Rejected" name="reject" />
    </State>
    
    <State name="Closed">
      <RejectOrReopen />
    </State>

    <State name="Rejected">
      <Beep />
    </State>
    
  </States>
</Workflow>